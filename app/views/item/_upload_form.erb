<%= form_with url: "upload/item", method: :post, model: item do |form| %>
 <% invalid_file_name = item.errors.include?(:file_name) %>
  <div class="col-md-6">
    <%= form.label :file_name, class: "form-label poppins" %>
    <div class="form-group">
      <%= form.text_field :file_name, class:"form-control #{'is-invalid' if invalid_file_name}", placeholder: "Name"%>
      <% if invalid_file_name %>
        <div class="invalid-feedback d-block">
          <% item.errors[:file_name].each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <%= form.label :file_type, class: "form-label poppins" %>
    <div class="form-group">
      <%= form.text_field :file_type, class:"form-control", placeholder: "File Type"%>
    </div>
  </div>
  <div class="form-group">
    <%= form.file_field :image_upload, class:"form-control",accept: 'image/png,image/gif,image/jpeg',placeholder: "Selfie"%>
  </div>
  <p id= "error" style = "color:red;"></p>
  <div class="col-12">
    <div class="d-flex justify-content-end">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<%end%>